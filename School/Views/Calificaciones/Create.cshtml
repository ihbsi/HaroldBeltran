@model School.Models.CalificacionesView

@{
    ViewData["Title"] = "Agregar nota";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="container">
    <div class="col-sm-12">
        <h1>Agregar nota</h1>
    </div>
    <br />
    <div class="row">
       <div class="col-sm-10">
           <form method="post" asp-action="Create">
               <div asp-validation-summary="ModelOnly" class="text-danger"></div>
               <div class="form-group">
                   <label asp-for="EstudianteInfo.Nombre" class="control-label" ></label><br />
                    @Html.DropDownListFor(x => x.EstudianteInfo.IdEstudiante, (SelectList)ViewBag.Estudiantes)
                   <span asp-validation-for="EstudianteInfo.Nombre" class="text-danger"></span>
               </div>
               <div class="form-group">
                   <label asp-for="MateriaInfo.Descripcion" class="control-label" ></label><br />
                    @Html.DropDownListFor(x => x.MateriaInfo.IdMateria, (SelectList)ViewBag.Materias)
                   <span asp-validation-for="MateriaInfo.Descripcion" class="text-danger"></span>
               </div>
               <div class="form-group">
                   <label asp-for="AcademicYear" class="control-label" ></label>
                   <input asp-for="AcademicYear" class="form-control"/>
                   <span asp-validation-for="AcademicYear" class="text-danger"></span>
               </div>
               <div class="form-group">
                   <label asp-for="AcademicSemestre" class="control-label" ></label>
                   <input asp-for="AcademicSemestre" class="form-control"/>
                   <span asp-validation-for="AcademicSemestre" class="text-danger"></span>
               </div>
               <div class="form-group">
                   <label asp-for="Nota" class="control-label" ></label>
                   <input type="text" asp-for="Nota" class="form-control"/>
                   <span asp-validation-for="Nota" class="text-danger"></span>
               </div>
               <div class="form-group">
                   <input type="submit" value="Guardar nota" class="btn btn-primary"/>
               </div>
           </form>
       </div>
    </div>
</div>
@section Scripts{
    <script>
        $(function () { 
            $("#Nota").on("keypress keyup blur", function (event) { 
                $(this).val($(this).val().replace(/[^0-9\.]/g, ''));
                if ((event.which != 46 || $(this).val().indexOf('.') != -1) && (event.which < 48 || event.which > 57)) {
                    event.preventDefault();
                }
            });
        })
    </script>
    @{<partial name="_ValidationScriptsPartial" />}
}

